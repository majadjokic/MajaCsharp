@page
@model IndexModel


@* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css"/> *@
<div class="row p-2">
    <h2>Employee Table - Total number of hours worked in month</h2>
</div>
<div class="row d-flex justify-content-center align-content-center">


<table class="table table-bordered">
    <thead>
        <tr>
            <th class="p-1">Name</th>
            <th class="p-1">Time Worked in Month (hours)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.Employees)
        {
            var addClass = emp.TotalHours < 100 ? "table-danger" : "";

            <tr class="@addClass">
                @if(@emp.Name==null){
                    <td class="p-1">Unknown</td>
                }
                else{
                    <td class="p-1">@emp.Name</td>
                }
                <td class="p-1">@emp.TotalHours hrs</td>
            </tr>
        }
    </tbody>
</table>
</div>

<div class="row p-2"></div>
<div class="row p-2">
    <h2>Employee Chart - Total number of hours worked in month</h2>
</div>

<div class="row d-flex justify-content-center align-content-center">
    <div class="col-6">
        <img class="col-12" src="/images/chart.png" alt="Work Time Pie Chart" />
    </div>
    
</div>






